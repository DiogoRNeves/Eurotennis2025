<!-- <%= name %> Team -->
<div class="bg-gray-100 rounded-lg shadow-md p-6">
    <div class="flex items-center justify-center mb-4">
      <img
        src="./assets/flags/<%= flag %>"
        alt="<%= name %> Flag"
        class="h-8 w-12 mr-2"
      />
      <h2 class="text-2xl font-bold text-gray-800"><%= name %></h2>
    </div>

    <div class="mb-2">
      <div class="flex">
        <div class="flex-shrink-0 w-32 flex items-center justify-center">
          <span
            class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-sm"
            ><%= players['MS'].tournament %></span
          >
        </div>
        <div class="ml-2">
