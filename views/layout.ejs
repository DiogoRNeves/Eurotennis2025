<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50 font-sans">
    <div class="flex min-h-screen">
      <!-- Mobile Menu Button -->
      <button
        class="fixed top-4 left-4 z-30 p-2 rounded-md bg-teal-600 text-white"
        onclick="toggleMenu()"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>

      <!-- Left Sidebar Navigation -->
      <nav
        id="sidebar"
        class="bg-teal-600 text-white w-64 flex-shrink-0 fixed lg:static -translate-x-full lg:translate-x-0 transition-transform duration-300 z-10 lg:h-auto h-full"
      >
        <div class="p-4">
          <div class="flex items-center mb-8 translate-x-0" id="logo-container">
            <div class="size-full flex items-center justify-center">
              <a href="/home">
                <img
                  src="assets/images/EuroTennis.svg"
                  alt="Eurotennis Logo"
                  class="size-full"
                />
              </a>
            </div>
          </div>
          <div class="space-y-4">
            <div class="space-y-2">
              <p class="font-semibold">Tournaments</p>
              <a
                href="/tournaments?t=mens-singles"
                class="block pl-4 py-2 hover:bg-teal-500"
                >Men's Singles</a
              >
              <a
                href="/tournaments?t=womens-singles"
                class="block pl-4 py-2 hover:bg-teal-500"
                >Women's Singles</a
              >
              <a
                href="/tournaments?t=mens-doubles"
                class="block pl-4 py-2 hover:bg-teal-500"
                >Men's Doubles</a
              >
              <a
                href="/tournaments?t=mixed-doubles"
                class="block pl-4 py-2 hover:bg-teal-500"
                >Mixed Doubles</a
              >
            </div>
            <a href="/teams" class="block py-2 hover:bg-teal-500">Teams</a>
            <a href="/orderofplay" class="block py-2 hover:bg-teal-500"
              >Order of Play</a
            >
            <a
              href="/login"
              class="block py-2 px-4 bg-lime-500 text-white rounded-lg hover:bg-lime-400 mt-8"
              >Staff Login</a
            >
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="flex-grow w-full">
        <%- body %>
      </main>
    </div>
    <script>
      function toggleMenu() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("-translate-x-full");
        sidebar.classList.toggle("lg:hidden");
      }

      let currentSlide = 0;
      const carousel = document.getElementById("carousel");
      const slides = carousel.children;

      function showSlide(index) {
        if (index >= slides.length) currentSlide = 0;
        if (index < 0) currentSlide = slides.length - 1;
        carousel.style.transform = `translateX(-${currentSlide * 100}%)`;
      }

      function nextSlide() {
        currentSlide++;
        showSlide(currentSlide);
      }

      function prevSlide() {
        currentSlide--;
        showSlide(currentSlide);
      }

      // Auto advance slides
      setInterval(nextSlide, 5000);
    </script>
  </body>
</html>