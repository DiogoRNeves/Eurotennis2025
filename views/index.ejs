<%- include('layout', { title, body: `
  <!-- Hero Section -->
  <div
  class="bg-gradient-to-r from-teal-600 to-lime-500 text-white py-24"
>
  <div class="container mx-auto px-4">
    <div class="max-w">
      <h1 class="text-5xl font-bold mb-6">
        Welcome to Eurotennis 2025
      </h1>
      <p class="text-xl mb-8">
        Join us for an exceptional tennis experience in the heart of
        Vilamoura. Four exciting tournaments featuring the best amateur
        tennis players from across Europe.
      </p>
      <div
        class="relative w-full max-w h-64 mt-8 overflow-hidden rounded-lg"
      >
        <div
          id="carousel"
          class="flex transition-transform duration-500 h-full"
        >
          <img
            src="https://images.unsplash.com/photo-1622279457486-62dcc4a431d6"
            alt="Tennis court 1"
            class="w-full h-full object-cover flex-shrink-0"
          />
          <img
            src="https://images.unsplash.com/photo-1626224583764-f87db24ac4ea"
            alt="Tennis court 2"
            class="w-full h-full object-cover flex-shrink-0"
          />
        </div>
        <button
          onclick="prevSlide()"
          class="absolute left-0 top-1/2 -translate-y-1/2 bg-black/50 text-white p-2 rounded-r"
        >
          ❮
        </button>
        <button
          onclick="nextSlide()"
          class="absolute right-0 top-1/2 -translate-y-1/2 bg-black/50 text-white p-2 rounded-l"
        >
          ❯
        </button>
      </div>
    </div>
  </div>


<!-- Tournament Format Section -->

  <div class="container mx-auto px-4 p-12">
    <h2 class="text-3xl font-bold text-center mb-12">
      Tournament Format
    </h2>
    <div class="grid md:grid-cols-2 gap-8 text-gray-800">
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-xl font-bold mb-4">Singles Tournament</h3>
        <ul class="space-y-2">
          <li>• 16 players per category</li>
          <li>• 4 groups in group phase</li>
          <li>• Best of 3 short sets (tie break at 4-all)</li>
          <li>• Match tie break in 3rd set</li>
          <li>• No-advantage scoring</li>
        </ul>
      </div>
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-xl font-bold mb-4">Doubles Tournament</h3>
        <ul class="space-y-2">
          <li>• 24 pairs per category</li>
          <li>• 8 groups in group phase</li>
          <li>• Best of 3 short sets (tie break at 3-all)</li>
          <li>• Match tie break in 3rd set</li>
          <li>• No-advantage scoring</li>
        </ul>
      </div>
    </div>
  </div>
</div>
`, extraTags: `
<script src="assets/js/carousel.js"></script>
` }) %>